<main>
  <h1>Register New User Account</h1>
  <div class="well">
    <%= link_to "Already have an account? Sign In", users_login_path, class: "btn btn-info" %>
  </div>

  <%= form_for @user, url: users_path do |form| %>

    <div class="form-group">
      <%= form.label :fname, "First Name" %>
      <%= form.text_field :fname, class: "form-control", value: flash[:original_fname] %>
    </div>
    <div class="form-group">
      <%= form.label :lname, "Last Name" %>
      <%= form.text_field :lname, class: "form-control", value: flash[:original_lname] %>
    </div>
    <div class="form-group">
      <%= form.label :email, "Email" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :pw, "Password" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm Password" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    <% if flash[:errors] %>
      <ul class="error">
        <% flash[:errors].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form.submit "Register", class: "btn btn-primary" %>
  <% end %>
</main>