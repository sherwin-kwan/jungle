<main>
  <h1>Register New User Account</h1>
  <div class="well">
    <%= link_to 'Already have an account? Sign In', "/", class: 'btn btn-info' %>
  </div>
  <%= form_for :user, url: users_path, do |form| %>

    <div class="form-group">
      <%= form.label :fname %>
      <%= form.text_field :fname, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :lname %>
      <%= form.text_field :lname, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :pw %>
      <%= form.password_field :pw, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :pw_confirm %>
      <%= form.password_field :pw_confirm, class: 'form-control' %>
    </div>
    <%= form.submit 'Register', class: 'btn btn-primary' %>

  <% end %>
</main>