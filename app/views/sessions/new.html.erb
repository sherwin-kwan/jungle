
<h1>Login Page</h1>
<div class="well">
  <%= link_to 'Don\'t have an account? Sign Up', new_user_path, class: 'btn btn-info' %>
</div>
<%= form_tag users_login_path do %>

  <div class="form-group">
    <%= label_tag :email, "Email" %>
    <%= email_field_tag :email, nil, class: 'form-control', value: flash[:original_email] %>
  </div>  
  <div class="form-group">
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
  <% if flash[:error] %>
      <div class="error"><%= flash[:error] %></div>
    <% end %>
  <%= submit_tag "Submit" %>

<% end %>