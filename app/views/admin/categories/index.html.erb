
<main>
  <h1> Welcome to the Categories Page </h1>


  <div class="well">
    <%= link_to '+ New Category', new_admin_category_path, class: 'btn btn-info' %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Category Name</th>
        <th>Number of Products in this Category</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category[:name] %></td>
          <td><%= category.products.count %></td>
          <td>
            <%= link_to fa_icon('trash'), admin_category_path(category), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>